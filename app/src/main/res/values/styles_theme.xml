<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Rivers" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.Rivers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.Rivers.Dark.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:actionModeBackground">@color/primary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Rivers.Light.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.Rivers.Light.NoActionBar.Popup">
        <item name="android:homeAsUpIndicator">@drawable/ic_cross</item>
    </style>

    <style name="Theme.Rivers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.Rivers.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>
