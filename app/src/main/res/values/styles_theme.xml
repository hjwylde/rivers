<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Rivers" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="Theme.Rivers.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- TODO (hjw): add in the rest of the theme colours here -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="Theme.Rivers.NoActionBar.Leaf">
        <!-- TODO (hjw): add in the rest of the theme colours here -->
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_cross</item>
    </style>

    <style name="Theme.Rivers.NoActionBar.Translucent">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Rivers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="Theme.Rivers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>