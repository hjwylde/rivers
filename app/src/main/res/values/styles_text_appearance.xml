<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Rivers.Headline" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/text_primaryLight</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="fontPath">fonts/Raleway-Regular.ttf</item>
        <item name="leading">@dimen/text_xxlarge_leading</item>
    </style>

    <style name="TextAppearance.Rivers.Headline.Medium">
        <item name="fontPath">fonts/Raleway-SemiBold.ttf</item>
    </style>

    <style name="TextAppearance.Rivers.Subheading" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/text_primaryLight</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="leading">@dimen/text_large_leading</item>
    </style>

    <style name="TextAppearance.Rivers.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/text_primaryLight</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="fontPath">fonts/OpenSans-Regular.ttf</item>
        <item name="leading">@dimen/text_medium_leading</item>
    </style>

    <style name="TextAppearance.Rivers.Body.Medium">
        <item name="fontPath">fonts/OpenSans-SemiBold.ttf</item>
    </style>

    <style name="TextAppearance.Rivers.Button" parent="TextAppearance.Rivers.Body.Medium">
        <item name="android:textAllCaps">true</item>
        <item name="leading">0dp</item>
    </style>

    <style name="TextAppearance.Rivers.Caption" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="fontPath">fonts/Raleway-Regular.ttf</item>
        <item name="leading">@dimen/text_small_leading</item>
    </style>

    <style name="TextAppearance.Rivers.Error" parent="TextAppearance.Rivers.Caption">
        <item name="android:textColor">@color/text_error</item>
    </style>
</resources>