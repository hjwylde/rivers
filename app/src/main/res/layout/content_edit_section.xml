<?xml version="1.0" encoding="utf-8"?>
<!-- TODO (hjw): rejig this file dimens -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageHeight"
        android:background="@color/primaryLight">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:layout_width="@dimen/touchTarget"
            android:layout_height="@dimen/touchTarget"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/gutter_medium">

            <ImageView
                android:id="@+id/camera"
                android:layout_width="@dimen/icon_large"
                android:layout_height="@dimen/icon_large"
                android:layout_gravity="center"
                android:src="@drawable/scrim_circle"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"/>
        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/screen_paddingHorizontal"
        android:layout_marginRight="@dimen/screen_paddingHorizontal"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screen_paddingVertical"
            app:errorTextAppearance="@style/TextAppearance.Rivers.Error"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/title"
                style="@style/TextAppearance.Rivers.Headline.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_title"
                android:inputType="text|textCapWords"
                android:nextFocusForward="@+id/subtitle"
                android:textColor="@color/text_secondaryLight">

                <requestFocus/>
            </android.support.design.widget.TextInputEditText>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/subtitle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/screen_paddingVertical"
            app:errorTextAppearance="@style/TextAppearance.Rivers.Error"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/subtitle"
                style="@style/TextAppearance.Rivers.Subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_subtitle"
                android:inputType="text|textCapSentences"/>
        </android.support.design.widget.TextInputLayout>

        <include layout="@layout/divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:paddingBottom="@dimen/infoContainerMargin"
            android:paddingTop="@dimen/infoContainerMargin">

            <LinearLayout
                android:id="@+id/grade_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/gutter_medium"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/gutter_small"
                    android:src="@drawable/ic_shield_outline"
                    android:tint="@color/text_primaryLight"/>

                <EditText
                    android:id="@+id/grade"
                    style="@style/TextAppearance.Rivers.Body.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/hint_grade"
                    android:inputType="text|textNoSuggestions"
                    android:minEms="2"
                    android:nextFocusDown="@+id/length"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/length_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/gutter_medium"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/gutter_small"
                    android:src="@drawable/ic_ruler"
                    android:tint="@color/text_primaryLight"/>

                <EditText
                    android:id="@+id/length"
                    style="@style/TextAppearance.Rivers.Body.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/hint_length"
                    android:inputType="text|textNoSuggestions"
                    android:minEms="2"
                    android:nextFocusDown="@+id/duration"
                    tools:ignore="TextFields"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/duration_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/gutter_small"
                    android:src="@drawable/ic_timer"
                    android:tint="@color/text_primaryLight"/>

                <EditText
                    android:id="@+id/duration"
                    style="@style/TextAppearance.Rivers.Body.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:hint="@string/hint_duration"
                    android:inputType="text|textNoSuggestions"
                    android:minEms="2"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>