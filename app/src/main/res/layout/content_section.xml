<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/secondary">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"></ImageView>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:onClick="onTitleContainerClick"
            android:orientation="vertical"
            android:paddingBottom="@dimen/text_marginVertical"
            android:paddingLeft="@dimen/text_marginHorizontal"
            android:paddingRight="@dimen/text_marginHorizontal"
            android:paddingTop="@dimen/text_marginVertical">

            <com.actinarium.aligned.TextView
                android:id="@+id/title"
                style="@style/TextAppearance.Rivers.Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondaryDark"/>

            <com.actinarium.aligned.TextView
                android:id="@+id/subtitle"
                style="@style/TextAppearance.Rivers.Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/infoContainerMargin"
            android:layout_marginLeft="@dimen/text_marginHorizontal"
            android:layout_marginRight="@dimen/text_marginHorizontal"
            android:layout_marginTop="@dimen/infoContainerMargin">

            <LinearLayout
                android:id="@+id/grade_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/iconSize"
                    android:layout_height="@dimen/iconSize"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/iconMargin"
                    android:src="@drawable/ic_shield_outline"
                    android:tint="@color/text_primaryLight"/>

                <com.actinarium.aligned.TextView
                    android:id="@+id/grade"
                    style="@style/TextAppearance.Rivers.Body.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primaryLight"
                    app:leading="0dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/length_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/iconSize"
                    android:layout_height="@dimen/iconSize"
                    android:layout_marginRight="@dimen/iconMargin"
                    android:src="@drawable/ic_ruler"
                    android:tint="@color/text_primaryLight"/>

                <com.actinarium.aligned.TextView
                    android:id="@+id/length"
                    style="@style/TextAppearance.Rivers.Body.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primaryLight"
                    app:leading="0dp"/>/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/duration_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/iconSize"
                    android:layout_height="@dimen/iconSize"
                    android:layout_marginRight="@dimen/iconMargin"
                    android:src="@drawable/ic_timer"
                    android:tint="@color/text_primaryLight"/>

                <com.actinarium.aligned.TextView
                    android:id="@+id/duration"
                    style="@style/TextAppearance.Rivers.Body.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_primaryLight"
                    app:leading="0dp"/>
            </LinearLayout>
        </LinearLayout>
%
        <include layout="@layout/divider"/>

        <com.actinarium.aligned.TextView
            android:id="@+id/description"
            style="@style/TextAppearance.Rivers.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_marginVertical"
            android:layout_marginLeft="@dimen/text_marginHorizontal"
            android:layout_marginRight="@dimen/text_marginHorizontal"
            android:layout_marginTop="@dimen/text_marginVertical"
            android:textColor="@color/text_primaryLight"/>
    </LinearLayout>
</LinearLayout>