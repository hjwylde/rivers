<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageHeight"
        android:background="@android:color/transparent"
        android:gravity="bottom"
        android:onClick="onActivityClick">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/loadingImage"
            android:clickable="true"
            android:scaleType="centerCrop">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/title_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:onClick="onTitleContainerClick"
            android:orientation="vertical"
            android:paddingBottom="@dimen/text_marginVertical"
            android:paddingLeft="@dimen/text_marginHorizontal"
            android:paddingRight="@dimen/text_marginHorizontal"
            android:paddingTop="@dimen/text_marginVertical">

            <com.actinarium.aligned.TextView
                android:id="@+id/title"
                style="@style/TextAppearance.Rivers.Display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondaryDark"/>

            <com.actinarium.aligned.TextView
                android:id="@+id/subtitle"
                style="@style/TextAppearance.Rivers.Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_marginVertical"
            android:layout_marginLeft="@dimen/text_marginHorizontal"
            android:layout_marginRight="@dimen/text_marginHorizontal"
            android:layout_marginTop="@dimen/text_marginVertical"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/grade_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.actinarium.aligned.TextView
                    android:id="@+id/grade"
                    style="@style/TextAppearance.Rivers.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.actinarium.aligned.TextView
                    style="@style/TextAppearance.Rivers.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFeatureSettings="smcp"
                    android:text="@string/label_grade"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/length_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.actinarium.aligned.TextView
                    android:id="@+id/length"
                    style="@style/TextAppearance.Rivers.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.actinarium.aligned.TextView
                    style="@style/TextAppearance.Rivers.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFeatureSettings="smcp"
                    android:text="@string/label_length"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/duration_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.actinarium.aligned.TextView
                    android:id="@+id/duration"
                    style="@style/TextAppearance.Rivers.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.actinarium.aligned.TextView
                    style="@style/TextAppearance.Rivers.Caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFeatureSettings="smcp"
                    android:text="@string/label_duration"/>
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/divider"/>

        <com.actinarium.aligned.TextView
            android:id="@+id/description"
            style="@style/TextAppearance.Rivers.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_marginVertical"
            android:layout_marginLeft="@dimen/text_marginHorizontal"
            android:layout_marginRight="@dimen/text_marginHorizontal"
            android:layout_marginTop="@dimen/text_marginVertical"/>
    </LinearLayout>
</LinearLayout>