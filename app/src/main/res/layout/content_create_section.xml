<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageHeight">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bm_create_section"/>

        <FrameLayout
            android:layout_width="@dimen/cameraSize"
            android:layout_height="@dimen/cameraSize"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/camera_margin">

            <ImageView
                android:id="@+id/camera"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/scrim_circle"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_camera"/>
        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/text_marginVertical"
        android:paddingLeft="@dimen/text_marginHorizontal"
        android:paddingRight="@dimen/text_marginHorizontal"
        android:paddingTop="@dimen/text_marginVertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="30"
            app:counterOverflowTextAppearance="@style/TextAppearance.Rivers.Error"
            app:counterTextAppearance="@style/TextAppearance.Rivers.Hint"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Rivers.Error"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/title"
                style="@style/TextAppearance.Rivers.Headline.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_title"
                android:inputType="text|textCapWords"
                android:textColor="@color/text_secondaryLight"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/subtitle_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:counterMaxLength="50"
            app:counterOverflowTextAppearance="@style/TextAppearance.Rivers.Error"
            app:counterTextAppearance="@style/TextAppearance.Rivers.Hint"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Rivers.Error"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/subtitle"
                style="@style/TextAppearance.Rivers.Subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_subtitle"
                android:inputType="text|textCapSentences"
                android:nextFocusDown="@+id/grade"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <include layout="@layout/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/infoContainerMargin"
        android:paddingTop="@dimen/infoContainerMargin">

        <LinearLayout
            android:id="@+id/grade_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/iconMargin"
                android:src="@drawable/ic_shield_outline"
                android:tint="@color/text_primaryLight"/>

            <EditText
                android:id="@+id/grade"
                style="@style/TextAppearance.Rivers.Body.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/hint_grade"
                android:inputType="text|textNoSuggestions"
                android:minEms="2"
                android:nextFocusDown="@+id/length"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/length_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:layout_marginEnd="@dimen/iconMargin"
                android:src="@drawable/ic_ruler"
                android:tint="@color/text_primaryLight"/>

            <EditText
                android:id="@+id/length"
                style="@style/TextAppearance.Rivers.Body.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/hint_length"
                android:inputType="text|textNoSuggestions"
                android:minEms="2"
                android:nextFocusDown="@+id/duration"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/duration_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:layout_marginEnd="@dimen/iconMargin"
                android:src="@drawable/ic_timer"
                android:tint="@color/text_primaryLight"/>

            <EditText
                android:id="@+id/duration"
                style="@style/TextAppearance.Rivers.Body.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/hint_duration"
                android:inputType="text|textNoSuggestions"
                android:minEms="2"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>