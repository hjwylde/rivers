<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hjwylde.rivers">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".RiversApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Rivers">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ui.activities.MapsActivity"
            android:label="@string/title_activity_maps">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.SectionActivity"
            android:parentActivityName=".ui.activities.MapsActivity"
            android:theme="@style/Theme.Rivers.NoActionBar.Translucent">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hjwylde.rivers.ui.activities.MapsActivity" />
        </activity>
        <activity
            android:name=".ui.activities.EditSectionActivity"
            android:label="@string/title_activity_editSection"
            android:parentActivityName=".ui.activities.SectionActivity"
            android:theme="@style/Theme.Rivers.NoActionBar.Leaf">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.hjwylde.rivers.ui.activities.SectionActivity" />
        </activity>
    </application>

</manifest>